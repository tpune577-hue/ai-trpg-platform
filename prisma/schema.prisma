// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

// Enum for user roles
enum UserRole {
  PLAYER
  GM
  CREATOR
}

// Enum for chat message types
enum MessageType {
  NARRATION
  TALK
  ACTION
}

// Enum for marketplace item types
enum ItemType {
  ART
  THEME
}

// User model with role-based access
model User {
  id            String   @id @default(uuid()) @db.Uuid
  email         String   @unique
  name          String?
  role          UserRole @default(PLAYER)
  passwordHash  String?
  image         String?
  emailVerified DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Marketplace purchases (array of MarketplaceItem IDs)
  purchasedAssets String[] @default([])

  // Relations
  characters       Character[]
  gmCampaigns      Campaign[]        @relation("GameMaster")
  playerCampaigns  CampaignPlayer[]
  chatMessages     ChatMessage[]
  marketplaceItems MarketplaceItem[]
  accounts         Account[]
  sessions         Session[]

  @@index([email])
  @@index([role])
}

// NextAuth Account model
model Account {
  id                String  @id @default(uuid()) @db.Uuid
  userId            String  @db.Uuid
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

// NextAuth Session model
model Session {
  id           String   @id @default(uuid()) @db.Uuid
  sessionToken String   @unique
  userId       String   @db.Uuid
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// NextAuth Verification Token model
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Campaign model with flexible game state
model Campaign {
  id           String   @id @default(uuid()) @db.Uuid
  title        String
  description  String?  @db.Text
  theme        String?
  inviteCode   String   @unique @default(cuid())
  isActive     Boolean  @default(true)
  maxPlayers   Int      @default(6)
  
  // JSONB field for flexible game state storage
  currentState Json?    @db.JsonB
  
  // Game Master
  gmId         String   @db.Uuid
  gm           User     @relation("GameMaster", fields: [gmId], references: [id], onDelete: Cascade)
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  characters     Character[]
  players        CampaignPlayer[]
  chatMessages   ChatMessage[]

  @@index([gmId])
  @@index([inviteCode])
  @@index([isActive])
}

// Junction table for Campaign-Player many-to-many relationship
model CampaignPlayer {
  id         String   @id @default(uuid()) @db.Uuid
  campaignId String   @db.Uuid
  playerId   String   @db.Uuid
  joinedAt   DateTime @default(now())
  isActive   Boolean  @default(true)

  campaign Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  player   User     @relation(fields: [playerId], references: [id], onDelete: Cascade)

  @@unique([campaignId, playerId])
  @@index([campaignId])
  @@index([playerId])
}

// Character model with flexible stats and inventory
model Character {
  id          String   @id @default(uuid()) @db.Uuid
  name        String
  description String?  @db.Text
  avatarUrl   String?
  level       Int      @default(1)
  experience  Int      @default(0)
  
  // JSONB fields for flexible RPG rules
  stats       Json     @db.JsonB  // e.g., { "strength": 10, "dexterity": 12, "intelligence": 14 }
  inventory   Json     @db.JsonB  // e.g., { "items": [...], "gold": 100, "equipment": {...} }
  
  // Foreign keys
  userId      String   @db.Uuid
  campaignId  String   @db.Uuid
  
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  campaign Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([campaignId])
  @@index([isActive])
}

// Chat message model for in-game communication
model ChatMessage {
  id         String      @id @default(uuid()) @db.Uuid
  content    String      @db.Text
  type       MessageType @default(TALK)
  
  // Sender information
  senderId   String      @db.Uuid
  senderName String?     // Cached for performance (character name or user name)
  
  // Campaign context
  campaignId String      @db.Uuid
  
  // Metadata
  isEdited   Boolean     @default(false)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  // Relations
  sender   User     @relation(fields: [senderId], references: [id], onDelete: Cascade)
  campaign Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)

  @@index([campaignId, createdAt])
  @@index([senderId])
  @@index([type])
}

// Marketplace item model for user-generated content
model MarketplaceItem {
  id          String   @id @default(uuid()) @db.Uuid
  title       String
  description String?  @db.Text
  type        ItemType
  price       Decimal  @db.Decimal(10, 2)
  
  // JSONB field for flexible item data
  data        Json     @db.JsonB  // e.g., { "imageUrl": "...", "tags": [...], "metadata": {...} }
  
  // Creator information
  creatorId   String   @db.Uuid
  
  // Marketplace metadata
  isPublished Boolean  @default(false)
  downloads   Int      @default(0)
  rating      Decimal? @db.Decimal(3, 2)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  creator User @relation(fields: [creatorId], references: [id], onDelete: Cascade)

  @@index([creatorId])
  @@index([type])
  @@index([isPublished])
  @@index([createdAt])
}
